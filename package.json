{
  "name": "ct-az-common-alert-endpoint",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Azure Function for an HTTP endpoint to receive Azure Monitor alerts that use the Common Alert Schema",
  "scripts": {
    "func": "cross-env NODE_ENV=development LOCAL_DEV=true func start",
    "func:verbose": "cross-env NODE_ENV=development LOCAL_DEV=true func start --verbose",
    "scratch": "cross-env NODE_ENV=development LOCAL_DEV=true node --trace-warnings ./scratch.js",
    "test": "echo \"No tests yet...\""
  },
  "author": {
    "name": "Michael Sprague",
    "email": "ms388@cornell.edu"
  },
  "repository": {
    "url": ""
  },
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "dependencies": {
    "@azure/storage-blob": "12.15.0",
    "axios": "1.4.0",
    "dayjs": "1.11.9",
    "dotenv": "16.3.1",
    "turndown": "7.1.2"
  },
  "devDependencies": {
    "@babel/core": "7.22.9",
    "@babel/eslint-parser": "7.22.9",
    "azure-functions-core-tools": "4.0.5198",
    "cross-env": "7.0.3",
    "cz-git": "1.7.0",
    "eslint": "8.46.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-prettier": "5.0.0",
    "prettier": "3.0.1",
    "prettier-eslint": "15.0.1"
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": false,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "import",
      "prettier"
    ],
    "ignorePatterns": [
      "**/.history/*",
      "**/node_modules/*"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 11,
      "sourceType": "module",
      "ecmaFeatures": {
        "impliedStrict": true,
        "modules": true
      }
    },
    "rules": {}
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always",
    "semi": true,
    "tabWidth": 2
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-git"
    }
  }
}
